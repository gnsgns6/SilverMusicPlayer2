<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/music2"
        android:contentDescription="@string/background_image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/roundCardView"
        android:layout_marginTop="100dp"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:elevation="0dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:layout_width="330dp"
            android:layout_height="220dp"
            android:cropToPadding="true"
            android:contentDescription="@string/round_image"
            android:src="@drawable/music1" />
    </androidx.cardview.widget.CardView>


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/silver_music_player"
    android:textColor="@color/teal_200"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_marginStart="60dp"
    android:layout_marginTop="10dp"
    />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="150dp"
        android:contentDescription="@string/play_button_icon"
        android:src="@drawable/play_icon"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="250dp"
        android:contentDescription="@string/next_button_icon"
        android:src="@drawable/skip_next"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="50dp"
        android:contentDescription="@string/previous_button_icon"
        android:src="@drawable/skip_previous"
        />

</RelativeLayout>